# Use a imagem oficial do MongoDB
FROM mongo:latest

# Copie o arquivo meu_comando.sh para o contêiner
COPY meu_comando.sh /app/meu_comando.sh

# Defina o diretório de trabalho
WORKDIR /app

# Dê permissão de execução ao arquivo meu_comando.sh
RUN chmod +x meu_comando.sh

# Instale o Docker no contêiner
RUN apt-get update && apt-get install -y docker.io

# Execute o comando meu_comando.sh e, em seguida, o comando docker-compose up
CMD ./meu_comando.sh && docker-compose up
